@model IssueTracker2020.Models.Project

@{
    ViewData["Title"] = "Details";
}

<div id="main-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-md-5 align-self-center">
                <!-- border-bottom: 2px solid transparent sets an invisible border under the Ticket Details title, that allow me to customize the space between the title and the breadcrumb. -->
                <!-- The <br /> tag was to large, so I found a workaround to have a gap, but at a smaller scale. -->
                <div class="page-title" style="font-size: 1.5rem; border-bottom: 2px solid transparent;">Project Details</div>
                <!-- Breadcrumb navigation. Dashboard > Tickets Index (All Tickets) > Details (Current Page, Ticket Details Page) -->
                <nav class="breadcrumb">
                    <a class="breadcrumb-item" asp-controller="Home" asp-action="Index">Dashboard</a>
                    <a class="breadcrumb-item" asp-controller="Projects" asp-action="Index">Projects</a>
                    <span class="breadcrumb-item active">Details</span>
                </nav>
            </div>
            <div class="col-md-7 d-flex justify-content-end align-self-center d-none d-md-flex">
            </div>
        </div>
    </div>
    <br />
    <div class="container-fluid">

        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <h5>Project Name:</h5>
                        <span>@Model.Name</span>
                        <h5 class="mt-4">Team Members:</h5>
                        <span>
                            @foreach (var user in Model.ProjectUsers)
                            {
                                @user.User.FullName <br />
                            }
                        </span>
                        <h5 class="mt-4">Project Tickets:</h5>
                        <span>
                            @foreach (var ticket in Model.Tickets)
                            {
                                <a asp-controller="Tickets" asp-action="Details" asp-route-id="@ticket.Id">@ticket.Title</a><br />
                            }
                        </span>
                    </div>
                    <div class="card-body">
                        <a asp-controller="Projects" asp-action="AssignUsers" asp-route-id="@Model.Id" class="mt-3 btn btn-outline-warning">Assign Users</a>
                        <a asp-controller="Projects" asp-action="Index" class="mt-3 btn btn-outline-warning">Back to Projects</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>