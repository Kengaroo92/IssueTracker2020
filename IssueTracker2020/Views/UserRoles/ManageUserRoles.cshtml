@model IEnumerable<IssueTracker2020.Models.ViewModels.ManageUserRolesViewModel>

<div class="row">
    @foreach (var Model in Model)
    {
<div class="card col-6" style="margin:2px">
    <div class="card-body">
        <h2 class="m-t-0 h3"><b>Assign Roles to @Model.User.FullName</b></h2>
        <p class="text-muted font-13 m-b-30">
            This form displays the current roles assigned to the user: @Model.User.FullName. Use the dropdown to select the roles that this user should be assigned. Once roles are selected, click "Assign Roles" to submit the form.
        </p>
        <hr />
        <form asp-controller="UserRoles" asp-action="ManageUserRoles" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.User.Id">
            <div class="col-12">
                <div class="form-group">
                    <label asp-for="@Model.Roles" class="control-label">Roles for @Model.User.FullName</label>
                    <select asp-for="@Model.SelectedRoles" class="form-control" asp-items="@Model.Roles" multiple="multiple"></select>
                </div>
            </div>
            <hr />
            <div class="col-12">
                <div class="form-group pull-right">
                    <input type="submit" value="Assign Roles" class="btn btn-info" />
                    <a class="btn btn-info" asp-controller="Users" asp-action="Index">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>}
</div>