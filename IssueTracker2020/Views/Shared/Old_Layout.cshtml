<!DOCTYPE html>
<html lang="en">

<head>

    <!-- Meta Tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - Issue Tracker 2020</title>
    <meta name="author" content="Kenan Bjelosevic">

    <!-- Favicon -->
    <link rel="icon" href="~/assets/images/favicon.png">

    <!-- Site Title -->
    <title>Issue Tracker 2020</title>

    <!-- Bootstrap 4 Core CSS -->
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <!-- DataTables -->
    <link href="//cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="~/assets/scss/datatables.css" />

    <!-- Custom Styles -->
    <link href="~/assets/css/animate.css" rel="stylesheet">
    <link href="~/assets/css/owl.carousel.min.css" rel="stylesheet">
    <link href="~/assets/css/jquery-pseudo-ripple.css" rel="stylesheet">
    <link href="~/assets/css/style.css" rel="stylesheet">
    <link href="~/assets/css/comments.css" />

    <!-- Fonts -->
    <link href="//fonts.googleapis.com/css2?family=Roboto:wght@300;400;700" rel="stylesheet">
    <link href="//fonts.googleapis.com/css2?family=Roboto+Slab:wght@300;400;700" rel="stylesheet">
    <link href="~/assets/css/fontawesome-all.min.css" rel="stylesheet" type="text/css">
    <link href="//fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

</head>

<body>

    <header class="xl bg-img bg-fixed" style="background-image: url()">

        <div class="overlay-dark"></div>

        <!-- Navigation -->
        <nav class="navbar navbar-expand-lg navbar-inverse main-nav fixed-top">
            <div class="sticky-nav-activate fixed-top"></div>
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index"><img src="~/assets/images/kengaroofavicon.png" alt=""></a>
                <a class="navbar-brand sticky-logo" asp-controller="Home" asp-action="Index"><img src="~/assets/images/kengaroo-logo.png" alt=""></a>

                <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbar-toggle" aria-controls="navbar-toggle" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="icon-bar top-bar"></span>
                    <span class="icon-bar middle-bar"></span>
                    <span class="icon-bar bottom-bar"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbar-toggle">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link"><i class="material-icons mr-5 fs-18 va-middle">home</i><span class="va-middle">Home</span></a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="UserRoles" asp-action="ManageUserRoles" class="nav-link"><i class="material-icons mr-5 fs-18 va-middle">supervised_user_circle</i><span class="va-middle">Manager Roles</span></a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Projects" asp-action="Index" class="nav-link"><i class="material-icons mr-5 fs-18 va-middle">assignment</i><span class="va-middle">Projects</span></a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Tickets" asp-action="Index" class="nav-link"><i class="material-icons mr-5 fs-18 va-middle">assignment</i><span class="va-middle">Tickets</span></a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="TicketPriorities" asp-action="Index" class="nav-link"><i class="material-icons mr-5 fs-18 va-middle">assignment</i><span class="va-middle">Priorities</span></a>
                        </li>
                        <li class="nav-item">
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button type="submit" class="nav-link btn btn-link">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>

    <!-- Render Body -->
    <div class="container">
        <main roles="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    @*@if (User.Identity.IsAuthenticated)
        {*@
    <footer class="bg-primary-dark dark">
        <div class="container">
            <div class="row  mobile-center">
                <div class="col-md-4 footer-left-area tablet-top">
                    <p>©@DateTime.Now.ToString("yyyy")<a asp-area="" asp-controller="Home" asp-action="Index" class="text-link mr-0"> Kengaroo</a> by <a href="//kenanbjelosevic.com" class="text-link mr-0">Kenan Bjelosevic</a></p>
                </div>
                <div class="col-md-8 footer-right-area">
                    <p>
                        <a asp-controller="Home" asp-action="Index" class="text-link mr-15">Home</a>
                        <a href="//kenanbjelosevic.com" class="text-link mr-15">Portfolio</a>
                        <a href="//github.com/Kengaroo92" class="text-link mr-15">GitHub</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>
    @*}*@

    <!-- Core Bootstrap JavaScript -->
    <script src="//code.jquery.com/jquery-3.5.1.js"></script>
    <script src="//cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <script src="//cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="//cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>

    <!-- DataTables JavaScript -->
    <script src="//cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>


    <!-- Core Template JavaScript -->
    <script src="//cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>

    <!-- Smooth Scroll -->
    <script src="~/assets/js/jquery.easing.min.js"></script>
    <script src="~/assets/js/smooth-scroll.js"></script>

    <!-- Hide Navigation -->
    <script src="~/assets/js/hide-nav.js"></script>

    <!-- Form Validation -->
    <script src="~/assets/js/jquery.validate.min.js"></script>
    <script src="~/assets/js/form-validation.js"></script>

    <!-- Ripple Effect Script -->
    <script src="~/assets/js/jquery-pseudo-ripple.js"></script>
    <script>
        $('.btn').ripple({
            duration: 1000,
        });
    </script>

    <script>
        $(document).ready(function () {
            $('.table').DataTable();
        });

    </script>

    @RenderSection("Scripts", required: false)

</body>

</html>